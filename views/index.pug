extends layouts/app 

block seo
    Title Plant Workers Record

block content
    a.btn.btn-sm.btn-primary.mb-3(href='/newRecord') Add New Record
    table.table.table-dark
        thead
            tr
                th(scope='col') #
                th(scope='col') Name
                th(scope='col') Trade
                th(scope='col') Phone Number
                th(scope='col') Action
        tbody
            for worker in workers
                tr
                    td= worker.id
                    td= worker.name
                    td= worker.trade
                    td= worker.phone_no
                    td
                        a.btn.btn-sm.btn-primary.mr-2(href=`/editRecord/${worker.id}`) Edit
                        a.btn.btn-sm.btn-danger(href=`/deleteRecord/${worker.id}`) Delete

    block script