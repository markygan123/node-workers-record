extends layouts/app

block seo
    Title Edit Worker Information

block content
    .card-body
        form(action=`/editRecord/${id}` method="POST")
            .form-group
                label(for='name') Name
                input#workerName.form-control.mb-4(type='text' name='name' value=`${name}` required)
            .form-group
                label(for='trade') Trade
                input#workerTrade.form-control.mb-4(type='text' name='trade' value=`${trade}` required)
            .form-group
                label(for='workerNumber') Phone Number
                input#workerNumber.form-control.mb-4(type='tel' name='phone_no' value=`${phone_no}` required)
            button.btn.btn-primary(type='submit') Submit
        
    block script
